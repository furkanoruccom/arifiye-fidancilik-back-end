@{
    ViewData["Title"] = "Index";
    ViewBag.AFirma = "nav-active nav-expanded";
}

@section Styles{
    <link href="/Ajax/_dataTable/datatables.min.css" rel="stylesheet" />
    <link href="/Ajax/_dataTable/table.css" rel="stylesheet" />
}
@section Scripts{
    <script src="/Ajax/_dataTable/datatables.min.js"></script>
    <script src="/Ajax/Firma/table.js"></script>
}

@if (TempData["FirmaMessage"] != null)
{
    <div class="alert alert-success">@TempData["FirmaMessage"]</div>
}

<Firma>
    <div class="card card-modern mb-2">
        <div class="card-body">

            <a href="/Firma/Create" class="btn btn-success mb-lg-0 mb-3">
                Proje Ekle
                <i class="fa-sharp fa-solid fa-plus ms-1 mx-1"></i>
            </a>

            <button class="btn btn-dark mb-lg-0 mb-3" onclick="reloadDataTable()">
                Tablo Yenile
                <i class="fa-solid fa-arrows-rotate ms-1"></i>
            </button>

        </div>
    </div>
</Firma>



<Firma>
    <div class="card card-modern mb-2">
        <div class="card-body">
            @*start*@
            <div class="table-responsive">
                <table id="example" class="display table  table-striped  bordered" style="width:100%">
                    <thead class="bg-dark text-white table-head-position-sticky">
                        <tr>
                            <th style="max-width: 7px;width: 7px;"></th>
                            <th style="max-width: 7px;width: 7px;">#</th>
                            <th>Başlık</th>
                            <th>Eklenme</th>
                            <th style="width: 250px;"></th>
                        </tr>
                    </thead>
                </table>
            </div>
            @*end*@
        </div>
    </div>
</Firma>

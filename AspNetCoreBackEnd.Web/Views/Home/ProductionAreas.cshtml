@using AspNetCoreBackEnd.Web.Services
@using AspNetCoreBackEnd.Web.Helpers
@model List<Firmalar>
@inject LanguageService _localization;
@{
    var lan = Thread.CurrentThread.CurrentCulture.Name;
    Layout = "_LayoutHome";
}
@section Styles {
    <!--Util CSS-->
    <link rel="stylesheet" href="assets/codframe/css/util.css">
    <!-- My Style  -->
    <link rel="stylesheet" href="/Assets/css/style.css">
    <link rel="stylesheet" href="/Assets/css/style-inner-page.css">
}


<section>
    <div class="inner-page-header">

        <span class="bg" style="background-image: url('assets/images/slider/1.png');"></span>
        <div class="overlay"></div>

        <div class="position-relative h-100 w-100 container-site">
            <div class="inner-line "></div>
            <div class="header-content">

                <h1 class="inner-title">
                    @_localization.GetKey("ProductionArea")
                </h1>
                <a href="/">Anasayfa</a> / <a href="javascript:void(0)">@_localization.GetKey("ProductionArea")</a>
            </div>
        </div>

    </div>
</section>

<section>
    <div class="js-cd-demo">
        <!-- Component HTML -->
        <section class="gallery-v2 padding-bottom-2xl">
            <div class="gallery-v2__content bg-dark-green">
                <div class="container max-width-adaptive-lg padding-top-2xl padding-bottom-xl">
                    <div class="grid gap-sm">
                        <div class="col-8@md offset-2@md col-6@lg offset-3@lg">
                            <h1 class="margin-bottom-sm text-white">@_localization.GetKey("OurEffort")</h1>
                            <p class="color-contrast-medium line-height-lg text-dark-gray">
                                @_localization.GetKey("CurrentProductionArea")
                                @_localization.GetKey("CurrentProductionArea2")
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="gallery-v2__gallery d-ld-block d-md-block d-sm-block d-none">
                <div class="container max-width-adaptive-lg">
                    <ul class="grid gap-md gap-sm@lg">
                        <li class="gallery-v2__item col-3 col-@@6-md">
                            <a href="#0"
                               class="gallery-v2__img-wrapper js-gallery-v2__img-wrapper">
                                <img class="gallery-v2__img" data-img-light src="/Assets/images/1.png"
                                     alt="Image description">

                            </a>
                        </li>
                        <li class="gallery-v2__item col-3 col-@@6-md">
                            <a href="#0"
                               class="gallery-v2__img-wrapper js-gallery-v2__img-wrapper">
                                <img class="gallery-v2__img" data-img-light src="/Assets/images/2.png"
                                     alt="Image description">

                            </a>
                        </li>
                        <li class="gallery-v2__item col-3 col-@@6-md">
                            <a href="#0"
                               class="gallery-v2__img-wrapper js-gallery-v2__img-wrapper">
                                <img class="gallery-v2__img" data-img-light src="/Assets/images/3.png"
                                     alt="Image description">


                            </a>
                        </li>
                        <li class="gallery-v2__item col-3 col-md-6">
                            <a href="#0"
                               class="gallery-v2__img-wrapper js-gallery-v2__img-wrapper">
                                <img class="gallery-v2__img" data-img-light src="/Assets/images/4.png"
                                     alt="Image description">

                            </a>
                        </li>
                    </ul>
                </div>
            </div>

        </section><!-- End Component HTML -->
    </div>
</section>



<section>
    <div class="home-product-area pt-0 pb100">
        <div class="header-area">
            <h1 style="font-size: 50px">@_localization.GetKey("ProductionAreaHeader")</h1>
            <p style="margin-top:-30px">@_localization.GetKey("ProductionAreaDescription")</p>
        </div>
        <div class="container">

            @foreach (var item in Model)
            {
                <div class="home-product-item">

                    <span class="bg" style="background-image: url('/Uploads/@item.MediaName');"></span>

                    @if (lan == "en-US")
                    {
                        <a href="/UretimAlani/@UrlFormatter.Format(item.en_Baslik)/@item.Id">
                            <div class="overlay"></div>
                        </a>
                    }
                    else
                    {
                        <a href="/UretimAlani/@UrlFormatter.Format(item.tr_Baslik)/@item.Id">
                            <div class="overlay"></div>
                        </a>
                    }

                    <div class="product-content">

                        @if (lan == "en-US")
                        {
                            <h3 class="mb-3">@item.en_Baslik</h3>

                            // Kelimeleri ',' karakterine göre ayırıyoruz
                            var buttonList = item.en_Buttons.Split(',');

                            foreach (var button in buttonList)
                            {
                                <a href="#"
                                   class="btn mb-3 bg-light text-dark-green fw-bold radius-30 px-4">
                                    @button
                                </a>
                            }
                        }
                        else
                        {
                            <h3 class="mb-3">@item.tr_Baslik</h3>

                            // Kelimeleri ',' karakterine göre ayırıyoruz
                            var buttonList = item.tr_Buttons.Split(',');

                            foreach (var button in buttonList)
                            {
                                <a href="#"
                                   class="btn mb-3 bg-light text-dark-green fw-bold radius-30 px-4">
                                    @button
                                </a>
                            }
                        }




                    </div>
                </div>
            }


        </div>
    </div>
</section>
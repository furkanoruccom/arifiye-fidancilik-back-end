</section>

<section>
    <div class="container mt50 mb50">
        <div class="header-area">
            <h1>@_localization.GetKey("ArifiyeFidancilik")</h1>
            <p>@_localization.GetKey("Contact")</p>
        </div>
        <div class="row">
            <div class="col">
                <form id="formContact">
                    <div class="row mb-1">
                        <div class="col">
                            <input type="text" class="form-control form-control-minimal" id="txt_name"
                                   placeholder="@_localization.GetKey("YourName")" required="">
                        </div>
                        <div class="col">
                            <input type="email" class="form-control form-control-minimal" id="txt_mail"
                                   placeholder="@_localization.GetKey("YourEmail")" required="">
                        </div>
                        <div class="col">
                            <input type="text" class="form-control form-control-minimal" id="txt_phone"
                                   placeholder="@_localization.GetKey("YourPhone")" required="">
                        </div>
                    </div>
                    <div class="form-row mb-1 mt50">
                        <div class="col">
                            <textarea class="form-control form-control-minimal" id="txt_message" style="min-height: 100px;"
                                      placeholder="@_localization.GetKey("YourMessage")" required=""></textarea>
                        </div>
                    </div>
                    <div class="form-row mt-3">
                        <div class="col">
                            <button class="btn bg-dark-green px-5 text-white" type="submit">@_localization.GetKey("Send")</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>





        <span class="bg" style="background-image: url('/Assets/images/slider/1.png');"></span>
        <div class="overlay"></div>
        <div class="position-relative h-100 w-100 container-site">
            <div class="inner-line "></div>
            <div class="header-content">
                <h1 class="inner-title">@_localization.GetKey("Contact")</h1>
                <a href="@Url.Action("Index", "Home")">@_localization.GetKey("Home")</a> / <a href="@Url.Action("Iletisim", "Home")">@_localization.GetKey("Contact")</a>
